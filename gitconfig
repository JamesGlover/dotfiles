[alias]
  ci = commit
  ciam = commit -am
  co = checkout
  st = status
  br = branch
  diffc = diff --cached
  put = push origin HEAD
  unstage = reset HEAD --
  amend = commit -a --amend
  last = log -1 HEAD
  unconflic = "!ruby -e 'x = `git st`;files = x.split(\"\n\").select{|x|x=~/unmerged/}.map{|x|x.split(\" \")[2]}.join(\" \"); files.each{|f| `git reset #{f};git co #{f}`}'"


[apply]
  whitespace = nowarn

[diff]
  color = auto
  rename = copy

[pager]
  color = true

[status]
  color = auto

[core]
  excludesfile = /home/micha/.gitignore

[push]
  default = current
