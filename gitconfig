[alias]
  aa = !git add -u && git add . && git status
  ci = commit
  cim = "!ruby -e \"require '~/dotfiles/ruby/git_cmds'; args_to_string('git ci -m')\""
  ciam = "!ruby -e \"require '~/dotfiles/ruby/git_cmds'; args_to_string('git ci -am')\""
  co = checkout
  st = status
  br = branch
  diffc = diff --cached
  put = push origin HEAD
  pl = pull
  ps = push
  pls = "!git pull && git push"
  pick = cherry-pick
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
  amend = commit -a --amend
  last = log -1 HEAD
  unconflic = "!git ls-files --unmerged | xargs git reset && git ls-files --unmerged | xargs git co"
  rmdeleted = "!git add -u"
  rmuntracked = "!git ls-files --others --exclude-standard | xargs rm"
  l = log --pretty=format:'%h %an %Cred%ar %Cgreen%s'
  rmb = !sh -c 'git branch -D $1 && git push origin :$1' -
  unpushed = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git log origin/$PROJ_BRANCH..HEAD"
  unpulled = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git fetch && git log HEAD..origin/$PROJ_BRANCH"

[apply]
  whitespace = nowarn

[diff]
  rename = copy

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = green
  local = blue
  remote = yellow

#normal status has added/changed = green untracked/deleted/conflic = red -> more colors
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[pager]
  color = true


[core]
  excludesfile = $HOME/.gitignore

[push]
  default = current

# rebase when pulling
[branch]
  autosetuprebase = always

