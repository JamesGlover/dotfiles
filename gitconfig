[alias]
  ci = commit
  cim = "!ruby -e \"require '~/dotfiles/ruby/git_cmds'; args_to_string('git ci -m')\""
  ciam = "!ruby -e \"require '~/dotfiles/ruby/git_cmds'; args_to_string('git ci -am')\""
  co = checkout
  st = status
  br = branch
  diffc = diff --cached
  put = push origin HEAD
  pl = pull
  ps = push
  pls = "!git pull && git push"
  pick = cherry-pick
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^
  amend = commit -a --amend
  last = log -1 HEAD
  unconflic = "!ruby -e \"require '~/dotfiles/ruby/git_cmds'; git_perform_on_st('\\s+unmerged', 'git reset #F;git co #F')\""
  rmdeleted = "!ruby -e \"require '~/dotfiles/ruby/git_cmds'; git_perform_on_st('\\s+deleted',  'git rm #F')\""
  rmuntracked = "!git ls-files --others --exclude-standard | xargs rm"
  l = log --pretty=format:'%h %an %Cred%ar %Cgreen%s'

[apply]
  whitespace = nowarn

[diff]
  rename = copy

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = green
  local = blue
  remote = yellow

#normal status has added/changed = green untracked/deleted/conflic = red -> ore colors
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[pager]
  color = true


[core]
  excludesfile = $HOME/.gitignore

[push]
  default = current
